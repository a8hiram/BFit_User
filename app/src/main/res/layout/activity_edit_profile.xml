<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfile">

    <EditText
        android:id="@+id/editText_editYourHeight"
        android:layout_width="252dp"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="93dp"
        android:background="@drawable/round_rect_credential"
        android:drawableLeft="@drawable/app_sort_icon"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppins"
        android:hint="Your Height"
        android:inputType="number"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="#ADA4A5"
        android:textColorHint="#ADA4A5"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_editYourWeight" />

    <TextView
        android:id="@+id/textView_editHeightUnit"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="297dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/unit_rectangle"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="CM"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_editYourWeight" />

    <TextView
        android:id="@+id/textView_editSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/ripple"
        android:clickable="true"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="Save"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editText_editYourWeight"
        android:layout_width="252dp"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="93dp"
        android:background="@drawable/round_rect_credential"
        android:drawableLeft="@drawable/scale_icon"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppins"
        android:hint="Your Weight"
        android:inputType="number"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="#ADA4A5"
        android:textColorHint="#ADA4A5"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_editDOB" />

    <TextView
        android:id="@+id/textView_editWeightUnit"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="297dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/unit_rectangle"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="KG"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_editDOB" />

    <EditText
        android:id="@+id/editText_editDOB"
        android:layout_width="315dp"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/round_rect_credential"
        android:clickable="false"
        android:cursorVisible="false"
        android:drawableLeft="@drawable/calendar_icon"
        android:drawablePadding="10dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fontFamily="@font/poppins"
        android:gravity="center_vertical"
        android:hint="Date of Birth"
        android:inputType="text"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="#ADA4A5"
        android:textColorHint="#ADA4A5"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_editGender" />

    <AutoCompleteTextView
        android:id="@+id/textView_editGender"
        android:layout_width="315dp"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/round_rect_credential"
        android:clickable="true"
        android:cursorVisible="false"
        android:drawableLeft="@drawable/gender_icon"
        android:drawableRight="@drawable/drop_down_icon"
        android:drawablePadding="10dp"
        android:dropDownHeight="155dp"
        android:focusable="false"
        android:fontFamily="@font/poppins"
        android:gravity="center_vertical"
        android:hint="Choose Gender"
        android:inputType="none"
        android:maxLines="1"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="#ADA4A5"
        android:textColorHint="#ADA4A5"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_editLastName" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_editProfilePicture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:src="@drawable/user_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_editYourProfile" />

    <TextView
        android:id="@+id/textView_editYourProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Let's edit your profile"
        android:textColor="#1D1617"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_editFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/round_rect_credential"
        android:drawableLeft="@drawable/user_icon"
        android:drawablePadding="10dp"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="First Name"
        android:inputType="textPersonName|textCapWords"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="#ADA4A5"
        android:textColorHint="#ADA4A5"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_editProfilePicture" />

    <EditText
        android:id="@+id/editText_editLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/round_rect_credential"
        android:drawableLeft="@drawable/user_icon"
        android:drawablePadding="10dp"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="Last Name"
        android:inputType="textPersonName|textCapWords"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="#ADA4A5"
        android:textColorHint="#ADA4A5"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_editFirstName" />

</androidx.constraintlayout.widget.ConstraintLayout>